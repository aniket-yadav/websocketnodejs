               <% if(user){ %> 
                <li class="nav-item ">
                    <a class="nav-link  text-white"  id="username" ><%= user.username %></a>
                </li>
               <li class="nav-item ">
                   <a class="nav-link  text-white" href="/logout">logout</a>
               </li>
            <% } else { %> 
               <li class="nav-item">
                <a class="nav-link text-white" href="/login">Login</a>
               </li>
            <li class="nav-item">
                <a class="nav-link text-white" href="/signup">Signup</a>
            </li>
        <% } %> 
           </ul>
       </nav>
  
